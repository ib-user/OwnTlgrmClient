<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:OwnTlgrmClient.ViewModels.Components;assembly=OwnTlgrmClient.ViewModels"
             x:DataType="vm:ChatViewModel"
             x:Class="OwnTlgrmClient.UI.Controls.ChatUserControl">
    <Grid RowDefinitions="* 50 50" Margin="10">
        <ListBox Grid.Row="0" ItemsSource="{Binding Messages}" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Content}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox Grid.Row="1" Text="{Binding MessageInput, Mode=TwoWay}"
                 Watermark="Type your message here..."
                 KeyDown="MessageInput_KeyDown" />
        <Button Grid.Row="2" Content="Send"
                Command="{Binding SendMessageCommand}" />
    </Grid>
</UserControl>